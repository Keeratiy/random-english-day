---
import Header from "../components/Header.astro";

const { pageTitle } = Astro.props;
const bodyClass =
  "text-neutral-600 flex flex-col justify-between min-h-dvh py-[2dvh] lg:pt-[6dvh] lg:pb-[3dvh] bg-[#f7f7f7] bg-local dark:bg-[#202124]dark:text-neutral-50";
---

<html>
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <link rel="canonical" href={Astro.url.href} />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <style is:global>
      @tailwind base;
      @layer base {
        *:hover,
        *:focus,
        *:active {
          @apply motion-safe:transition;
        }

        :root {
          @apply scroll-smooth antialiased;

          --pagefind-ui-scale: 1;
          --pagefind-ui-primary: theme("colors.neutral.800");
          --pagefind-ui-text: theme("colors.neutral.600");
          --pagefind-ui-background: theme("colors.neutral.50");
          --pagefind-ui-border: theme("colors.zinc.300");
          --pagefind-ui-tag: theme("colors.zinc.300");
          --pagefind-ui-font: inherit;
        }
      }
      @tailwind components;
      @tailwind utilities;
    </style>
  </head>
  <body class:list={bodyClass}>
    <div
      class:list={[
        "mx-auto",
        "flex",
        "w-[90dvw]",
        "max-w-[1400px]",
        "grow",
        "flex-col",
        "bg-neutral-50",
        "bg-local",
        "p-[3dvw]",
        "shadow-[0_0.5em_1em_0_rgba(236,236,236,0.86)]",
        "lg:p-[2dvw]",
        "dark:bg-[#212223]",
        "dark:shadow-[0_0_0.5em_0.25em_rgba(136,136,136,0.35)]",
      ]}
    >
      <Header currentNav="Home" />
      <main class="px-[2dvw] pt-[2dvh] lg:pt-[4dvh]">
        <slot />
      </main>
    </div>
  </body>
</html>
