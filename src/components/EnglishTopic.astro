---
import { Members } from "../config";
import Card from "./Card.astro";

let memberList: Record<string, string | boolean>[] = [];
for (const mem in Members) {
  memberList.push({ mem, ...Members[mem] });
}
---

<div class="flex flex-col gap-4">
  <Card>
    <div class="flex flex-col">
      <div class="flex justify-between">
        <h2 class="text-2xl p-2">Today Topic</h2>
        <div class="hover:cursor-pointer" id="btnRandom">
          <img
            src="/random-english-day/icons/random.svg"
            width="30px"
            height="30px"
          />
        </div>
      </div>
      <div class="flex justify-center p-4 mt-6 mb-4">
        <p id="topicsName" class="text-2xl md:text-3xl lg:text-4xl text-center">Just click random</p>
      </div>
    </div>
  </Card>
  <Card>
    <div
      id="tempRandomMember"
      class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-2 min-h-[400px]"
    >
      <p class="text-2xl md:text-3xl lg:text-4xl col-span-full text-center my-auto">Just click random</p>
    </div>
  </Card>
</div>
