---
import { Members } from "../data/members";
import Card from "./Card.astro";
import TimeModal from "./TimeModal.astro";
let memberList: Record<string, string | boolean>[] = [];
for (const mem in Members) {
  memberList.push({ mem, ...Members[mem] });
}
---

<div class="flex flex-col gap-4">
  <Card>
    <div class="flex flex-col">
      <div class="flex justify-between">
        <h2 class="text-2xl p-2">Today Topic</h2>
        <div class="hover:cursor-pointer" id="btnRandom">
          <img
            src="/random-english-day/icons/random.svg"
            width="30px"
            height="30px"
          />
        </div>
      </div>
      <div class="flex justify-center p-4 mt-6 mb-4 min-h-26">
        <p
          id="topicsName"
          class="text-2xl md:text-3xl block max-w-[1000px] overflow-hidden break-words whitespace-normal text-center"
        >
          Just click random
        </p>
      </div>
    </div>
  </Card>
  <Card>
    <div
      class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-1 gap-3 min-h-[90px]"
    >
      <div class="flex items-center justify-between space-x-4 my-auto">
        <div class='justify-start"'>
          <img
            class="hover:cursor-pointer"
            id="btnBack"
            src="/random-english-day/images/icon/back.png"
            width="30px"
            height="30px"
          />
        </div>

        <div class="flex items-center justify-center space-x-2">
          <img
            class="hover:cursor-pointer"
            id="btnReset"
            src="/random-english-day/images/icon/reset.png"
            width="40px"
            height="40px"
          />
          <div id="btnStart">
            <img
              class="hover:cursor-pointer"
              id="icStart"
              src="/random-english-day/images/icon/start.png"
              width="50px"
              height="50px"
            />
          </div>

          <p
            id="timer"
            class="text-2xl md:text-3xl lg:text-4xl col-span-full mt-2 cursor-pointer"
          >
            60:00
          </p>
        </div>

        <div class="flex justify-end">
          <img
            class="hover:cursor-pointer"
            id="btnNext"
            src="/random-english-day/images/icon/next.png"
            width="30px"
            height="30px"
          />
        </div>
      </div>
    </div>
  </Card>
  <Card>
    <div
      id="tempRandomMember"
      class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-2 min-h-[300px]"
    >
      <p
        class="text-2xl md:text-3xl lg:text-4xl col-span-full text-center my-auto"
      >
        Just click random
      </p>
    </div>
  </Card>
  <TimeModal />
</div>
<script></script>
